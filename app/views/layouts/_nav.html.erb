<header>
  <nav>
    <div class="logo">
      <img src="https://www.linkpicture.com/q/click_1.png">
    </div>
    <% if current_user.admin? %>
      <ul>
        <li><%= link_to "Products",
          products_path,
          class: controller_name == "products" ? "clicked" : "" %></li>
        <li>
          <%= link_to "Users",
          users_path,
          class: controller_name == "users" && action_name == "index" ? "clicked" : "" %>
        </li>
        <li>
          <%= link_to "Bids", bids_path, class: controller_name == "bids" ? "clicked" : "" %>
        </li>
        <li>
          <%= link_to "Log out", logout_path, data: { turbo_method: :delete } %>
        </li>
      </ul>
    <% else %>
      <ul>
        <li><%= link_to "Products",
          products_path,
          class: controller_name == "products" ? "clicked" : "" %></li>
        <li><%= link_to "Bids",
          user_path(current_user),
          class: controller_name == "users" && action_name == "show" ? "clicked" : "" %>
        </li>
        <li>
          <%= link_to "Settings",
          edit_user_path(current_user),
          class: controller_name == "users" && action_name == "edit" ? "clicked" : "" %>
        </li>
        <li>
          <%= link_to "Log out", logout_path, data: { turbo_method: :delete } %>
        </li>
      </ul>
    <% end %>
  </nav>
</header>
