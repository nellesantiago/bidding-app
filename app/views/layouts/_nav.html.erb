<header>
  <nav>
    <div class="logo">
      <img src="https://www.linkpicture.com/q/click_1.png">
    </div>
    <% if current_user.admin? %>
      <ul>
        <li><%= link_to "Products", products_path %></li>
        <li>
          <%= link_to "Users", users_path %>
        </li>
        <li>
          <%= link_to "Bids", bids_path %>
        </li>
        <li>
          <%= link_to "Log out", logout_path, data: { turbo_method: :delete } %>
        </li>
      </ul>
    <% else %>
      <ul>
        <li><%= link_to "Products", products_path %></li>
        <li><%= link_to "Bids", user_path(current_user) %>
        </li>
        <li>
          <%= link_to "Settings", edit_user_path(current_user) %>
        </li>
        <li>
          <%= link_to "Log out", logout_path, data: { turbo_method: :delete } %>
        </li>
      </ul>
    <% end %>
  </nav>
</header>
