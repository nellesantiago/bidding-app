<p style="color: green"><%= notice %></p>

<%= render @user %>

<p>
  <strong>Bids:</strong>
  <% @user.bids.each do |bid| %>
    <ul>
      <li>
        Product Name:
        <%= bid.product.name %><br>
        Bid Amount:
        <%= number_to_currency(bid.amount, unit: "â‚±", strip_insignificant_zeros: true) %>
        <br>
        Date Placed:
        <%= bid.created_at.strftime("%a, %d %b %Y %I:%M %p") %><br>
      </li>
    </ul>
  <% end %>
</p>

<% if current_user.admin?%>
<div>
  <%= link_to "Back to users", users_path %>
  <%= link_to "Destroy this user", @user, method: :delete %>
</div>
<% end %>
