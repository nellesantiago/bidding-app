<main class="sessions">
  <div class="left">
    <img src="https://www.linkpicture.com/q/bids-removebg-preview.png">
  </div>
  <div class="right">
    <div class="container">
      <div class="logo">
        <img src="https://www.linkpicture.com/q/click_1.png">
      </div>
      <%= form_with(model: @user) do |form| %>
        <%= render "shared/errors", object: @user %>
        <div>
          <%= form.text_field :first_name, placeholder: "First name" %>
        </div>

        <div>
          <%= form.text_field :last_name, placeholder: "Last name" %>
        </div>

        <div>
          <%= form.email_field :email, placeholder: "Email address" %>
        </div>

        <div>
          <%= form.password_field :password, placeholder: "Password" %>
        </div>

        <div>
          <%= form.password_field :password_confirmation, placeholder: "Confirm Password" %>
        </div>

        <div>
          <%= form.submit "Sign up" %>
        </div>
      <% end %>
      <div class="text">
        Already have an account?
        <%= link_to "Log in!", login_path %>
      </div>
      <div class="back">
        <%= link_to "< Back to Home", root_path %>
      </div>
    </div>
  </div>
</main>
